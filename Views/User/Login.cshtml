@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_UserLayout.cshtml";

}
<h4 style="color:red; text-align: center">@ViewBag.ThongBao</h4>

<div class="container">
    <!-- Outer Row -->
    <div class="row justify-content-center">
        <div class="col-xl-10 col-lg-12 col-md-9">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">ĐĂNG NHẬP</h1>
                                </div>
                                @using (Html.BeginForm(new { @class = "user" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true)
                                    <div class="form-group">
                                        @Html.TextBox("Tendn", (string)ViewBag.tendn, new { @class = "form-control form-control-user", id = "exampleInputUsername", placeholder = "Nhập vào tên tài khoản" , value = ViewBag.tendn })
                                        @ViewData["Err1"]
                                    </div>
                                    <div class="form-group">
                                        @Html.TextBox("MatKhau", (string)ViewBag.matkhau, new { type = "password", @class = "form-control form-control-user", id = "exampleInputPassword", placeholder = "Nhập vào mật khẩu"})
                                        @ViewData["Err2"]
                                    </div>
                                    <div class="form-group">
                                        <div class="custom-control custom-checkbox small">
                                            @Html.CheckBox("GhiNho", false, new { @class = "custom-control-input", id = "customCheck" })
                                            @* <input type="checkbox" class="custom-control-input" id="customCheck"> *@
                                            <label class="custom-control-label" for="customCheck">
                                                Ghi nhớ đăng nhập
                                            </label>
                                        </div>
                                    </div>
                                    <input type="submit" class="btn btn-primary btn-user btn-block" value="Login" />
                                    <hr>
                                    <a href="#" class="btn btn-google btn-user btn-block">
                                         Đăng nhập bằng Google
                                    </a>
                                    <a href="#" class="btn btn-facebook btn-user btn-block">
                                         Đăng nhập bằng Facebook
                                    </a>
                                }
                                <hr>
                                <div class="text-center">
                                    @Html.ActionLink("Quên mật khẩu", "ForgotPassword", new { @class = "small" })
                                </div>
                                <div class="text-center">
                                    @Html.ActionLink("Đăng ký", "Register", new { @class = "small" })
                                </div>
                                <div  class="text-center">
                                    <a href="@Url.Action( "Home", "Movie")">
                                        Quay về trang chủ
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
