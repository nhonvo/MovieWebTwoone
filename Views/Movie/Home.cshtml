        <div class="row ipad-width">
            <div class="col-md-8">
                <div class="ads">
                    <img src="~/images/banner-ads.jpg" alt="" style=" width:728px; height:106px">
                </div>
                <div class="title-hd">
                    <h2>Tóm tắt phim hay</h2>
                </div>
                <div class="tabs">
                    <div class="tab-content">
                        <div id="tab31" class="tab active">
                            <div class="row">
                                <div class="blog-item-style-1">
                                    <img src="~/Content/MoviePosters/a(1).jpg" alt="" style="width: 170px; height: 250px ">
