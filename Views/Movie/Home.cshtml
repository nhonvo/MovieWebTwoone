@model IEnumerable<MovieWeb.Models.Phim>

@{
    ViewBag.Title = "Trang Chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="slider movie-items">
    <div class="container">
        <div class="row">
            <div class="social-link">
                <p>Theo dõi chúng tôi: </p>
                <a href="https://www.facebook.com/Twoone-103646042401175"><i class="ion-social-facebook"></i></a>
                <a href="https://www.facebook.com/Twoone-103646042401175"><i class="ion-social-twitter"></i></a>
                <a href="https://www.facebook.com/Twoone-103646042401175"><i class="ion-social-googleplus"></i></a>
                <a href="https://www.facebook.com/Twoone-103646042401175"><i class="ion-social-youtube"></i></a>
            </div>
            <div class="slick-multiItemSlider">
                @Html.Action("SlideTopView", "Movie")
            </div>
        </div>
    </div>
</div>

<div class="movie-items">
    <div class="container">
        <div class="row ipad-width">
            <div class="col-md-8">
                <div class="title-hd">
                    <h2>Phim lẻ</h2>
                    <a href="@Url.Action("SearchByFilter", "Movie")" class="viewall">Xem tất cả<i class="ion-ios-arrow-right"></i></a>
                </div>
                <div class="tabs">
                    <ul class="tab-links">
                        <li class="active"><a href="#tab1">#Phổ biến</a></li>
                        <li><a href="#tab2"> #Sắp chiếu</a></li>
                        <li><a href="#tab3">  #Yêu thích nhất  </a></li>
                        <li><a href="#tab4"> #Xem nhiều nhất</a></li>
                    </ul>
                    <div class="tab-content">
                        <div id="tab1" class="tab active">
                            <div class="row">
                                <div class="slick-multiItem">
                                    @Html.Action("SlideMovieNew", "Movie")
                                </div>
                            </div>
                        </div>
                        <div id="tab2" class="tab">
                            <div class="row">
                                <div class="slick-multiItem">
                                    @Html.Action("SlideTopView", "Movie")
                                </div>
                            </div>
                        </div>
                        <div id="tab3" class="tab">
                            <div class="row">
                                <div class="slick-multiItem">
                                    @Html.Action("SlideMovieNew", "Movie")
                                </div>
                            </div>
                        </div>
                        <div id="tab4" class="tab">
                            <div class="row">
                                <div class="slick-multiItem">
                                    @Html.Action("SlideTopView", "Movie")
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="title-hd">
                    <h2>Phim đề xuất cho bạn</h2>
                    <a href="@Url.Action("SearchByFilter", "Movie", new {sortOrder = "IMDB_desc"})" class="viewall">Xem tất cả<i class="ion-ios-arrow-right"></i></a>
                </div>
                <div class="tabs">
                    <div class="tab-content">

                        <div id="tab22" class="tab active">
                            <div class="row">
                                <div class="slick-multiItem">
                                    @Html.Action("SlideTopView", "Movie")
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="sidebar">
                    <div class="ads">
                        <img src="~/Content/Logo.png" alt="" width="336" height="296">
                    </div>
                    <div class="celebrities">
                        <h4 class="sb-title">Diễn viên yêu thích</h4>
                        @Html.Action("TC_TTPhimTDV", "Movie", new { id = 2 })
                        <a href="@Url.Action("ActorGrid", "Movie")" class="btn">Tất cả diễn viên<i class="ion-ios-arrow-right"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="trailers">
    <div class="container">
        <div class="row ipad-width">
            <div class="col-md-12">
                <div class="title-hd">
                    <h2>Phim sắp ra mắt</h2>
                    <a href="@Url.Action("SearchByFilter", "Movie", new{ sortOrder = "date_desc"})" class="viewall">Xem tất cả<i class="ion-ios-arrow-right"></i></a>
                </div>
                <div class="videos">
                    <div class="slider-for-2 video-ft">
                        <div>
                            <iframe class="item-video" src="" data-src="https://www.youtube.com/embed/4hZi5QaMBFc"></iframe>
                        </div>
                        <div>
                            <iframe class="item-video" src="" data-src="https://www.youtube.com/embed/jwD04NsnLLg"></iframe>
                        </div>
                        <div>
                            <iframe class="item-video" src="" data-src="https://www.youtube.com/embed/1Q8fG0TtVAY"></iframe>
                        </div>
                        <div>
                            <iframe class="item-video" src="" data-src="https://www.youtube.com/embed/H8oSvldAGfg"></iframe>
                        </div>
                        <div>
                            <iframe class="item-video" src="" data-src="https://www.youtube.com/embed/1Q8fG0TtVAY"></iframe>
                        </div>
                    </div>
                    <div class="slider-nav-2 thumb-ft">
                        @foreach (var item in Model.Take(10))
                        {
                            <a href="@Url.Action("MovieDetail", "Movie", new { id = item.MaPhim})">
                                <div class="item">
                                    <div class="trailer-infor">
                                        <h4 class="desc">@item.TenPhim</h4>
                                        <p>@item.ThoiLuong phút</p>
                                    </div>
                                </div>
                            </a>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<!-- latest new v1 section-->
