@model MovieWeb.Models.NguoiDung

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}
<div class="card">
    <div class="card-body">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <h3 class="box-title">Thông tin người dùng</h3>
            <div class="table-responsive">
                <table class="table table-striped table-product">
                    <tbody>
                        <tr>
                            <td>Mã người dùng</td>
                            <td>@Html.DisplayFor(model => model.MaNguoiDung)</td>
                        </tr>
                        <tr>
                            <td>Họ và tên</td>
                            <td>@Html.DisplayFor(model => model.HoTen)</td>
                        </tr>
                        <tr>
                            <td>Giới tính</td>
                            <td>
                                @if (Model.GioiTinh == "M")
                                {
                                    <p>Nam</p>
                                }
                                else if (Model.GioiTinh == "F")
                                {
                                    <p>Nữ</p>
                                }
                                else
                                {
                                    <p>Không xác định</p>
                                }
                            </td>
                        </tr>
                        <tr>
                            <td>Tài khoản</td>
                            <td>@Html.DisplayFor(model => model.TaiKhoan)</td>
                        </tr>
                        <tr>
                            <td>Email</td>
                            <td>@Html.DisplayFor(model => model.Email)</td>
                        </tr>
                        <tr>
                            <td>Số điện thoại</td>
                            <td>@Html.DisplayFor(model => model.SDT)</td>
                        </tr>
                        <tr>
                            <td>Ngày sinh</td>
                            <td>@Model.NgaySinh.Value.ToShortDateString()</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="form-actions my-3 no-color">
    @Ajax.ActionLink("Sửa", "Edit", new { id = Model.MaNguoiDung }, null, new { @class = "btn btn-danger" })
    @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-dark" })
</div>