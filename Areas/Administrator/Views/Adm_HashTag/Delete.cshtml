@model MovieWeb.Models.HashTag

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

    <h3>Bạn có thật sự muốn xóa HashTag này?</h3>
    <div class="card">
        <div class="card-body">
            <h3 class="box-title">Thông tin</h3>
            <div class="table-responsive">
                <table class="table table-striped table-product">
                    <tbody>
                        <tr>
                            <td>Mã HashTag</td>
                            <td>@Html.DisplayFor(model => model.MaHashTag)</td>
                        </tr>
                        <tr>
                            <td>Tên HashTag</td>
                            <td>@Html.DisplayFor(model => model.TenTag)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <br />
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-danger" />
            @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-dark" })
        </div>
    }
