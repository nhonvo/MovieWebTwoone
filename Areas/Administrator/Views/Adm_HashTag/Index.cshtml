@model IEnumerable<MovieWeb.Models.HashTag>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}
<h1>QUẢN LÝ HASHTAG</h1>


<p>
    @Html.ActionLink("Thêm", "Create",null, new { @class = "btn btn-primary" })

</p>
<table class="table">
    <tr>
        <th>
            Mã Tag
        </th>
        <th>
            Tên Tag
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaHashTag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenTag)
            </td>
            <td>
                @Ajax.ActionLink("Sửa", "Edit", new { id = item.MaHashTag }, null, new { @class = "btn btn-success" })
                @Ajax.ActionLink("Chi tiết", "Details", new { id = item.MaHashTag }, null, new { @class = "btn btn-info" })
                @Ajax.ActionLink("Xóa", "Delete", new { id = item.MaHashTag }, null, new { @class = "btn btn-danger" })                

            </td>
        </tr>
    }

</table>