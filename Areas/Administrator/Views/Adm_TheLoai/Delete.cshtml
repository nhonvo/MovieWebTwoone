@model MovieWeb.Models.TheLoai

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

<h3>Bạn có chắc muốn xóa thể loại này?</h3>
<div>
    <div class="card">
        <div class="card-body">

            <h3 class="box-title">Thông tin</h3>
            <div class="table-responsive">
                <table class="table table-striped table-product">
                    <tbody>
                        <tr>
                            <td>Mã thể loại</td>
                            <td>@Html.DisplayFor(model => model.MaTheLoai)</td>
                        </tr>
                        <tr>
                            <td>Tên thể loại</td>
                            <td>@Html.DisplayFor(model => model.TenTheLoai)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Quay lại danh sách", "Index")
        </div>
    }
</div>
