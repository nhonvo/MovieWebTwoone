@model MovieWeb.Models.Phim

@{
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h3 class="card-header">@Html.DisplayFor(model => model.TenPhim)</h3>
        <div class="row">
            <div class="col-lg-5 col-md-5 col-sm-6">
                <div class="white-box text-center"><img src="~/Content/MoviePosters/@Model.HinhBanner" class="img-responsive"></div>
            </div>
            <div class="col-lg-7 col-md-7 col-sm-6">
                <h4 class="box-title mt-5">Nội dung tóm tắt</h4>
                <p>@Html.Raw(Model.NoiDungPhimTomTat)</p>
                <hr />
                <h4 class="box-title mt-5">Nội dung phim</h4>
                <p>@Html.Raw(Model.NoiDungPhim)</p>


            </div>
            <div class="col-lg-12 col-md-12 col-sm-12">
                <h3 class="box-title mt-5">Thông tin tổng quan</h3>
                <div class="table-responsive">
                    <table class="table table-striped table-product">
                        <tbody>
                            <tr>
                                <td width="390">Số sao</td>
                                <td>@Model.SoSaoTrungBinh</td>
                            </tr>
                            <tr>
                                <td>Thời gian</td>
                                <td>@Html.Raw(Model.ThoiLuong) phút</td>
                            </tr>
                            <tr>
                                <td>Ngày sản xuất</td>
                                <td>@Html.DisplayFor(model => model.NgaySanXuat)</td>
                            </tr>
                            <tr>
                                <td>Đạo diễn</td>
                                <td>
                                    @foreach (var item in Model.DaoDiens)
                                    {
                                        <a href="#">@item.TenDaoDien</a>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td>Diễn viên</td>
                                <td>
                                    @foreach (var item in Model.DienVienDongPhims)
                                    {
                                        <a href="#">@item.DienVien.TenDienVien</a>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td>Quốc gia</td>
                                <td>@Html.DisplayFor(model => model.DatNuoc.TenNuoc)</td>
                            </tr>
                            <tr>
                                <td>Ngôn ngữ</td>
                                <td>@Html.DisplayFor(model => model.NgonNgu.TenNgonNgu)</td>
                            </tr>
                            <tr>
                                <td>Điểm IMDb</td>
                                <td>@Html.DisplayFor(model => model.DiemIMDB)</td>
                            </tr>
                            <tr>
                                <td>Lượt xem</td>
                                <td>@Html.DisplayFor(model => model.LuotXem)</td>
                            </tr>
                            <tr>
                                <td>Link phim</td>
                                <td>@Html.DisplayFor(model => model.LinkPhim)</td>
                            </tr>
                            <tr>
                                <td>Link phim VIP</td>
                                <td>@Html.DisplayFor(model => model.LinkPhimVip)</td>
                            </tr>
                            <tr>
                                <td>Trailer phim</td>
                                <td>@Html.DisplayFor(model => model.TrailerPhim)</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="form-actions my-3 no-color">
    @Ajax.ActionLink("Sửa", "Edit", new { id = Model.MaPhim }, null, new { @class = "btn btn-danger" })
    @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-dark" })
</div>


