@model MovieWeb.Models.Phim

@{
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">

    <h3>Bạn có thật sự muốn xóa không?</h3>

</div>
<div class="card">
    <div class="card-body">
        <h3 class="card-header">@Html.DisplayFor(model => model.TenPhim)</h3>
        <div class="row">
            <div class="col-lg-5 col-md-5 col-sm-6">
                <div class="white-box text-center"><img src="~/Content/MoviePosters/@Model.HinhBanner" class="img-responsive"></div>
            </div>
            <div class="col-lg-7 col-md-7 col-sm-6">
                <h4 class="box-title mt-5">@Html.DisplayNameFor(model => model.NoiDungPhimTomTat)</h4>
                <p>@Html.Raw(Model.NoiDungPhimTomTat)</p>
                <hr />
                <h4 class="box-title mt-5">@Html.DisplayNameFor(model => model.NoiDungPhim)</h4>
                <p>@Html.Raw(Model.NoiDungPhim)</p>


            </div>
            <div class="col-lg-12 col-md-12 col-sm-12">
                <h3 class="box-title mt-5">Thông tin tổng quan</h3>
                <div class="table-responsive">
                    <table class="table table-striped table-product">
                        <tbody>
                            <tr>
                                <td width="390">@Html.DisplayNameFor(model => model.SoSaoTrungBinh)</td>
                                <td>@Model.SoSaoTrungBinh</td>
                            </tr>
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.ThoiLuong)</td>
                                <td>@Html.Raw(Model.ThoiLuong) phút</td>
                            </tr>
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.NgaySanXuat)</td>
                                <td>@Html.DisplayFor(model => model.NgaySanXuat)</td>
                            </tr>
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.DaoDiens)</td>
                                <td>
                                    @foreach (var item in Model.DaoDiens)
                                    {
                                        <a href="#">@item.TenDaoDien</a>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.DienVienDongPhims)</td>
                                <td>
                                    @foreach (var item in Model.DienVienDongPhims)
                                    {
                                        <a href="#">@item.DienVien.TenDienVien</a>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.DatNuoc)</td>
                                <td>@Html.DisplayFor(model => model.DatNuoc.TenNuoc)</td>
                            </tr>
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.NgonNgu)</td>
                                <td>@Html.DisplayFor(model => model.NgonNgu.TenNgonNgu)</td>
                            </tr>
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.DiemIMDB)</td>
                                <td>@Html.DisplayFor(model => model.DiemIMDB)</td>
                            </tr>
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.LuotXem)</td>
                                <td>@Html.DisplayFor(model => model.LuotXem)</td>
                            </tr>
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.LinkPhim)</td>
                                <td>@Html.DisplayFor(model => model.LinkPhim)</td>
                            </tr>
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.LinkPhimVip)</td>
                                <td>@Html.DisplayFor(model => model.LinkPhimVip)</td>
                            </tr>
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.TrailerPhim)</td>
                                <td>@Html.DisplayFor(model => model.TrailerPhim)</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions my-3 no-color">
        <input type="submit" value="Xóa" class="btn btn-danger" />
        @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-dark" })
    </div>
}

