
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLoginLayout.cshtml";
}

<!-- Outer Row -->
<div class="row justify-content-center">

    <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-3 bg-primary"></div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-2">Quên mật khẩu</h1>
                                <p class="mb-4">Nhập email dưới đây và chúng tôi sẽ gửi bạn link để khôi phục mật khẩu</p>
                            </div>
                            @using (Html.BeginForm(new { @class = "user" }))
                            {
                                <div class="form-group">
                                    @Html.TextBox("email", null, new { type = "email", @class = "form-control form-control-user", id = "exampleInputEmail", placeholder = "Nhập địa chỉ Email..." })
                                    @ViewData["Err"]
                                </div>
                                <input class="btn
                                            btn-primary btn-user btn-block" type="submit" value="Khôi phục mật khẩu" />
                            }
                            <hr>
                            <div class="text-center">
                                @Html.ActionLink("Đăng nhập", "Login")
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 bg-primary"></div>
                </div>
            </div>
        </div>

    </div>

</div>

