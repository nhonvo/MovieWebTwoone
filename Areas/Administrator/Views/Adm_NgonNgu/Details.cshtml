@model MovieWeb.Models.NgonNgu

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="card">
        <div class="card-body">

            <h3 class="box-title">Thông tin</h3>
            <div class="table-responsive">
                <table class="table table-striped table-product">
                    <tbody>
                        <tr>
                            <td>Mã ngôn ngữ</td>
                            <td>@Html.DisplayFor(model => model.MaNgonNgu)</td>
                        </tr>
                        <tr>
                            <td>Tên ngôn ngữ</td>
                            <td>@Html.DisplayFor(model => model.TenNgonNgu)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-success" />
            @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-dark" })
        </div>
    </div>
</div>
